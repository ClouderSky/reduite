{
    "compilerOptions": {
        "outDir": "./dist/",
        "moduleResolution": "node",
        "module": "commonjs",
        "strict": true,
        "target": "es5",
        "declaration": true,
        "removeComments": true,
        "lib": ["dom", "es2017"],
        "baseUrl": ".",
        "paths": {
            "reduite/*": ["./src/*"],
            "reduite": ["./src/index.ts"]
        }
    },
    "include": [
        "src/**/*",
        "__tests__/**/*"
    ],
    "exclude": [
        "node_modules",
    ],
}